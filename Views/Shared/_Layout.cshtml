<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - GestorBiblioteca</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/lib/font-awesome/css/all.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/GestorBiblioteca.styles.css" asp-append-version="true" />

    <style>
        body {
            background-color: #1a1a2e;
            color: white;
            min-height: 100vh;
        }

        /* Navbar Styles */
        .navbar {
            background: linear-gradient(145deg, #16213e, #1a1a2e) !important;
            box-shadow: 0 2px 15px rgba(0, 0, 0, 0.3);
        }

        .navbar-brand {
            font-weight: 600;
            background: linear-gradient(45deg, #4d7bf3, #5e60ce);
            -webkit-background-clip: text;
            background-clip: text;
            color: transparent !important;
        }

        .navbar-toggler {
            border: 2px solid rgba(77, 123, 243, 0.5);
            padding: 0.5rem;
        }

        .navbar-toggler-icon {
            background-image: url("data:image/svg+xml,%3csvg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 30 30'%3e%3cpath stroke='rgba(77, 123, 243, 1)' stroke-linecap='round' stroke-miterlimit='10' stroke-width='2' d='M4 7h22M4 15h22M4 23h22'/%3e%3c/svg%3e") !important;
        }

        /* Offcanvas Styles */
        .offcanvas {
            background: linear-gradient(145deg, #16213e, #1a1a2e);
            color: white;
        }

        .offcanvas-header {
            border-bottom: 1px solid rgba(77, 123, 243, 0.2);
        }

        .offcanvas-title {
            color: #4d7bf3;
            font-weight: 600;
        }

        .btn-close {
            filter: invert(1) brightness(200%);
        }

        /* Nav Links */
        .nav-link {
            color: #fff !important;
            transition: all 0.3s ease;
            border-radius: 8px;
            padding: 0.5rem 1rem !important;
        }

            .nav-link:hover, .nav-link.active {
                background: rgba(77, 123, 243, 0.1);
                transform: translateX(5px);
            }

        /* Dropdown Styles */
        .dropdown-menu {
            background: linear-gradient(145deg, #16213e, #1a1a2e);
            border: 1px solid rgba(77, 123, 243, 0.2);
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.3);
        }

        .dropdown-item {
            color: white !important;
            transition: all 0.3s ease;
            padding: 0.75rem 1.5rem;
        }

            .dropdown-item:hover {
                background: rgba(77, 123, 243, 0.1);
                transform: translateX(5px);
            }

        .dropdown-divider {
            border-color: rgba(77, 123, 243, 0.2);
        }

        /* Footer */
        .footer {
            background: linear-gradient(145deg, #16213e, #1a1a2e);
            border-top: 1px solid rgba(77, 123, 243, 0.2) !important;
            color: white !important;
            position: fixed;
            width: 50%;
            font-size: 0.8rem;
        }

            .footer a {
                color: #4d7bf3 !important;
                text-decoration: none;
            }

        /* Container padding for fixed footer */
        .container {
            padding-bottom: 5px;
        }
    </style>
    @await RenderSectionAsync("Estilos", required: false)
</head>
<body>
    <header>
        <nav class="navbar navbar-light">
            <div class="container-fluid">
                <div class="d-flex align-items-center">
                    <a class="navbar-brand">
                        <i class="fas fa-book-reader me-2"></i>GestorBibliotecaUDH
                    </a>
                    <a asp-controller="Home" asp-action="Index" class="btn btn-outline-light ms-3" role="button">
                        <i class="fas fa-arrow-circle-left me-2"></i>Inicio
                    </a>
                </div>
                <button class="navbar-toggler" type="button" data-bs-toggle="offcanvas" data-bs-target="#offcanvasNavbar" aria-controls="offcanvasNavbar">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="offcanvas offcanvas-end" tabindex="-1" id="offcanvasNavbar" aria-labelledby="offcanvasNavbarLabel">
                    <div class="offcanvas-header">
                        <h5 class="offcanvas-title" id="offcanvasNavbarLabel">
                            <i class="fas fa-book-reader me-2"></i>Libreria Demo
                        </h5>
                        <button type="button" class="btn-close" data-bs-dismiss="offcanvas" aria-label="Close"></button>
                    </div>
                    <div class="offcanvas-body">
                        <ul class="navbar-nav justify-content-end flex-grow-1 pe-3">
                            <li class="nav-item">
                                <a class="nav-link active" asp-controller="Home" asp-action="Index">
                                    <i class="fas fa-home me-2"></i>Inicio
                                </a>
                            </li>
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" id="offcanvasNavbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    <i class="fas fa-bars me-2"></i>Menu
                                </a>
                                <ul class="dropdown-menu" aria-labelledby="offcanvasNavbarDropdown">
                                    <li>
                                        <a class="dropdown-item" asp-controller="LIbros" asp-action="Lista">
                                            <i class="fas fa-book me-2"></i>Libros
                                        </a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" asp-controller="Autores" asp-action="Lista">
                                            <i class="fas fa-pen-fancy me-2"></i>Autores
                                        </a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" asp-controller="Categorias" asp-action="Lista">
                                            <i class="fas fa-tags me-2"></i>Categorias
                                        </a>
                                    </li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li>
                                        <a class="dropdown-item" asp-controller="Ventas" asp-action="Lista">
                                            <i class="fas fa-shopping-cart me-2"></i>Ventas
                                        </a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" asp-controller="Home" asp-action="CerrarSesion">
                                            <i class="fas fa-sign-out-alt me-2"></i>Cerrar Sesión
                                        </a>
                                    </li>
                                </ul>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="footer">
        <div class="container">
            <div class="d-flex justify-content-between align-items-center" style="padding: 5px 0;">
                <span style="font-size: 0.9rem;">&copy; 2024 - GestorBibliotecaUDH</span>
                <a asp-controller="Home" asp-action="Privacy" style="font-size: 0.9rem;">Privacidad</a>
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>